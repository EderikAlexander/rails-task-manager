
<div class="show-task text-center" style="border: 1px solid; width: 300px; margin: 0 auto; margin-top: 20px;">
  <div class="title-task">
    <h1> Title: </h1>
    <h2> <%= @task.title %> </h2>
  </div>
  <div class="description-task">
    <h3>  Description:</h3>
    <p>
      <%= @task.description %>
    </p>
  </div>
  <div class="created-at-task">
    <h3>Created at:</h3>
    <p>
      <%= @task.created_at %>
    </p>
  </div>
  <%= link_to "See all Tasks", tasks_path, class:"btn btn-success", style:"margin-bottom: 20px;" %>
  <%= link_to "Delete", task_path(@task), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }, style:"margin-bottom: 20px;" %>
  <%= link_to "Edit post", edit_task_path(@task), class:"btn btn-warning" %>
</div>
