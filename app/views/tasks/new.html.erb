
<div class="form-new" class="text-center" style="margin: 0 auto; width: 300px; margin-top: 20px;">
  <form action="/tasks" method="post" class="form-group">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

    <label for="title">Title: </label>
    <input type="text" name="task[title]" id="title" class="form-control">

    <label for="description">Description: </label>
    <input type="text" name="task[description]" id="description" class="form-control" style="margin-bottom: 20px;">

    <input type="submit" class="btn btn-success">
    <%= link_to "See all Tasks", tasks_path, class:"btn btn-danger" %>
  </form>
</div>

