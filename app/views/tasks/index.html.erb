<h1> See all your open Tasks:</h1>

<ul>
<% @tasks.each do |task| %>
<li>
  <h2> <%= task.title %> </h2>
  <%= link_to "View post", task_path(task), class:"btn btn-warning" %>
  <%= link_to "Edit post", edit_task_path(task), class:"btn btn-primary" %>
  <%= link_to "Delete", task_path(task), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
</li>

<% end %>
</ul>

<%= link_to "Create a new post", new_task_path, class:"btn btn-success" %>
